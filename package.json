    "scripts": {
        "setup": "npm i && npm start",
        "build": "yarn sass:build && react-scripts build",
        "sass:watch": "node-sass --watch src/styles/scss -o src/styles/css",
        "sass:build": "node-sass src/styles/scss -o src/styles/css --source-map true",
        "start": "yarn run sass:build && react-scripts start",
        "startdev": "yarn run sass:watch && react-scripts start",
        "devapi": "json-server -p 3004 --watch src/data/Database.json",
        "entry": "react-scripts start",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "eslint": "7.1.0"
